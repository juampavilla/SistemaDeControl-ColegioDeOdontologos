<%= render partial: 'shared/error_messages', locals: { localVar: @user }%>
<%= form_for(@user, url: yield(:action)) do |f| %>


<% if !@user.profesional_id.nil? %>
  <%= f.label :profesional_id %>
  <%= f.hidden_field :profesional_id%>
  <br/>
  <%= @user.profesional.apellido %>
  &nbsp;
  <%= @user.profesional.nombres %>
<% end %>
<br/>
<br/>

<%= f.label :email %>
<%= f.email_field :email, class: 'form-control' %>

<%= f.label :password %>
<%= f.password_field :password, class: 'form-control' %>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation, class: 'form-control' %>

<%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
