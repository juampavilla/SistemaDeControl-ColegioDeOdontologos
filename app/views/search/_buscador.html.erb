<%= form_tag(search_index_path, method: :get) do %>
  <div class="container-fluid search-box">
    <div class="row">
      <div class="form-group">
        <div class="col-sm-10">
          <%= text_field_tag :termino_buscado, params[:termino_buscado], class: "form-control", placeholder: "Ingrese nombre, apellido, dni o matricula para buscar..." %>
        </div>
        <div class="col-sm-2">
          <%= button_tag(type: "submit", class: "btn btn-default", name: nil) do %>
            Buscar
            <%= fa_icon "search" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<% end %>
